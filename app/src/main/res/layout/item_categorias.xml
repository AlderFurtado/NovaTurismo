<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="8dp">

    <View
        android:id="@+id/categoria_item_view"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:background="@drawable/item_square_categorias"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"/>

    <ImageView
        android:id="@+id/categoria_item_image"
        android:layout_width="71dp"
        android:layout_height="54dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/categoria_item_view"
        app:layout_constraintEnd_toEndOf="@+id/categoria_item_view"
        app:layout_constraintStart_toStartOf="@+id/categoria_item_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/categoria_item_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto"
        android:text="categoria"
        android:textColor="#736868"
        android:textSize="8dp"
        app:layout_constraintEnd_toEndOf="@+id/categoria_item_view"
        app:layout_constraintStart_toStartOf="@+id/categoria_item_view"
        app:layout_constraintTop_toBottomOf="@+id/categoria_item_view" />
</android.support.constraint.ConstraintLayout>